<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.pokedex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="app.pokedex.PokemonActivity"></activity>
        <activity android:name="app.pokedex.PokemonActivity$PokemonActivityActivity"></activity>
        <activity android:name="app.pokedex.PokedexAdapter$PokedexViewHolder$PokedexAdapterActivity"></activity>
<!--        &lt;!&ndash; activity used in the app and what they are allowed to do &ndash;&gt;-->
        <activity android:name="app.pokedex.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- add permission to communicate with the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>